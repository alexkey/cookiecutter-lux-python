{
    "name": "Foo Python Package",
    "repo_name": "{{ cookiecutter.name | lower | replace(' ', '_') | replace('.', '_') }}",
    "class_name": "{{ cookiecutter.repo_name | replace('_', ' ') | title | replace(' ', '') }}",
    "brief": "Python package skeleton.",
    "description": "The boilerplate Python project that aims to create facility for maintaining of the package\neasily. It considering tools for building, testing and distribution.",
    "version": "0.1.0",
    "author_name": "Waldo Garply",
    "author_email": "waldo@example.com",
    "url": "https://waldo.example.com",
    "license": "BSD3",
    "year": "2019",

    "python_version": "3.7",
    "python": "python{{ cookiecutter.python_version }}",
    "pip_list_format": "columns",
    "virtualenv_dir_name": ".venv",
    "enable_sphinx": "false",

    "shebang_coding": "# -*- coding: utf-8 -*-",
    "shebang_shell": "#!/bin/bash",
    "shebang_python": "#!/usr/bin/env python{{ cookiecutter.python_version[0] }}",

    "enable_vagrant": "false",
    "vagrant_name": "Foo",
    "vagrant_box": "ubuntu/xenial64",
    "vagrant_hostname": "foo",
    "forwarded_port_guest": "80",
    "forwarded_port_host": "8080",
    "vagrant_ip": "42.1.1.101",
    "vagrant_cpus": "2",
    "vagrant_memsz": "2048",
    "vagrant_vramsz": "16",
    "vagrant_accel3d": "off",
    "vagrant_provision": "scripts/bootstrap.sh",
    "vagrant_roles": "all",
    "vagrant_ansible_verbose": "false",
    "vagrant_shared": ".",
    "vagrant_shared_guest": "/var/shared",
    "vagrant_gui": "false"
}
